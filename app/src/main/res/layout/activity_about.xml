<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorF0F3FF"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoLinearLayout
            android:background="@color/colorWhite"
            android:layout_marginTop="30px"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="100px"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/logo" />
            <TextView
                android:gravity="center"
                android:text="Version 1.0.1"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="20px"
                android:lineSpacingExtra="15px"
                android:layout_marginTop="50px"
                android:text="          360极速借是通过云计算、计算机学习等技术呈现 个人信用情况。定位消费贷款领域的金融科技平台，成 为连接优质客户与金融机构贷款服务的技术纽带。360 极速借与金融机构合作帮助其拓展和精准画像目标消费 贷款客户群体，提升金融机构在网络贷款领域的获客能 力和数据风控能力。"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</layout>
