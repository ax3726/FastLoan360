<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingTop="36px"
        android:paddingRight="30px">

        <ImageView
            android:id="@+id/img"
            android:layout_width="134px"
            android:layout_height="134px"
            android:layout_marginLeft="5px"
            android:layout_marginBottom="34px"
            android:src="@mipmap/money1" />

        <View
            android:layout_width="1px"
            android:layout_height="124px"
            android:layout_alignBaseline="@+id/img"
            android:layout_marginLeft="27px"
            android:layout_toRightOf="@+id/img"
            android:background="@color/colorLine" />

        <TextView
            android:id="@+id/tv_money_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62px"
            android:layout_marginTop="26px"
            android:layout_toRightOf="@+id/img"
            android:text="5000元"
            android:textColor="#1E3751"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="26px"
            android:layout_toRightOf="@+id/tv_money_count"
            android:text="￥108"
            android:textColor="#FF2C59"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_money_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14px"
            android:layout_marginTop="26px"
            android:layout_toRightOf="@+id/tv_money"
            android:text="￥168"
            android:textColor="#B9BFC5"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_money_count"
            android:layout_alignLeft="@+id/tv_money_count"
            android:layout_marginTop="8px"
            android:text="期限周期30天"
            android:textColor="#B9BFC5"
            android:textSize="24px" />

        <ImageView
            android:layout_width="58px"
            android:layout_height="58px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27px"
            android:src="@drawable/item_nomal_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/img"
            android:background="@color/colorLine" />
    </com.zhy.autolayout.AutoRelativeLayout>
</layout>