<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:background="@color/colorF0F3FF"
                    android:orientation="horizontal"
                    android:paddingLeft="30px"
                    android:paddingTop="21px"
                    android:paddingRight="30px">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/info_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5px"
                        android:layout_weight="1"
                        android:lineSpacingExtra="10px"
                        android:text="恭喜您，根据您的资料评估，您满足以下额度提现条件，请尽 快去申请"
                        android:textSize="24px" />

                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_marginLeft="37px"
                    android:drawableLeft="@mipmap/recommend_title"
                    android:drawablePadding="30px"
                    android:gravity="center_vertical"
                    android:text="速贷种类"
                    android:textColor="#223B54"
                    android:textSize="28px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="#E2E5E9" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="#F0F3FF" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/banner" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:layout_marginTop="18px"
                    android:background="#F0F3FF" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="12px"
                    android:layout_marginRight="29px"
                    android:drawableRight="@mipmap/recommend_down"
                    android:text="推荐产品介绍"
                    android:textColor="#101010"
                    android:textSize="28px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="30px"
                    android:background="#E2E5E9" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="48px"
                    android:lineSpacingExtra="20px"
                    android:text="1. 速贷种类每次只可选择一件产品
                     2. 推荐产品年化率10%-35% 3. 放款失败我们将服务费以借币的形式退还到您的钱包 4.以上产品均为第三方提供"
                    android:textColor="@color/color666666"

                    android:textSize="26px" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:src="@mipmap/login_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5px"
                        android:text="我已阅读并同意"
                        android:textColor="@color/color666666"
                        android:textSize="24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5px"
                        android:text="《评估及推荐服务协议》"
                        android:textColor="@color/colorText"
                        android:textSize="24px" />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E5E9" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="服务费：198借币"
                android:textColor="@color/color666666"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_loan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_common"
                android:gravity="center"
                android:text="去借款"
                android:textColor="@color/colorWhite"
                android:textSize="32px" />

        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>
</layout>