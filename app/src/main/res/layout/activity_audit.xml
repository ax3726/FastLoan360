<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorF0F3FF"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rly_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="36px"
                android:paddingBottom="36px"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                >



                <ImageView
                    android:id="@+id/image_01"
                    android:layout_width="124px"
                    android:layout_height="124px"
                    />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="0dp"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:layout_height="124px"
                    android:layout_toRightOf="@id/image_01"
                    android:background="#e2e5e9" />

                <TextView
                    android:id="@+id/tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/view_line"
                    android:text="360极速借"
                    android:textColor="#1e3751"
                    android:textSize="28px"
                    />

                <TextView
                    android:id="@+id/tv_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_01"
                    android:layout_marginTop="19px"
                    android:layout_toRightOf="@id/view_line"
                    android:text="额度15000元"
                    android:textColor="#666666"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/tv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_02"
                    android:layout_marginTop="12px"
                    android:layout_toRightOf="@id/view_line"
                    android:text=""
                    android:textColor="#ff2c59"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_02"
                    android:layout_marginTop="12px"
                    android:layout_marginLeft="23px"
                    android:layout_toRightOf="@id/tv_03"
                    android:text=""
                    android:textColor="#d8d8d8"
                    android:textSize="18px" />


                <TextView
                    android:id="@+id/tv_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_01"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="19px"
                    android:layout_toRightOf="@id/tv_02"
                    android:text="周期90天"
                    android:textColor="#e2e5e9"
                    android:textSize="22px" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="130px"
                    android:layout_height="38px"
                    android:layout_below="@id/tv_01"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:background="@drawable/grid_shap_two"
                    android:text="申请退款"
                    android:textColor="@color/colorText"
                    android:textSize="22px" />

            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_shenhe_01" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_shenhe_02" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_shenhe_03" />
                <!--<TextView-->
                <!--android:layout_margin="20dp"-->
                <!--android:drawablePadding="15dp"-->
                <!--android:textColor="#223b54"-->
                <!--android:text="更多借款产品"-->
                <!--android:drawableLeft="@mipmap/order_icon_2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
                <!--<View-->
                <!--android:background="#e2e5e9"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginRight="20dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"/>-->


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rc_body"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:divider="#f9f9f9"
                        android:dividerHeight="1dp"
                        android:paddingTop="15dp"></android.support.v7.widget.RecyclerView>

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
