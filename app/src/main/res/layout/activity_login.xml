<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="397px"
            android:background="@mipmap/login_bg" />


        <ImageView
            android:layout_width="216px"
            android:layout_height="216px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-159px"
            android:src="@mipmap/logo" />


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75px"
            android:layout_marginTop="134px"
            android:layout_marginRight="75px"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingLeft="15px"
            android:paddingBottom="34px"
            android:textColor="@color/color333333"
            android:textColorHint="@color/color999999"
            android:textSize="28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="75px"
            android:layout_marginRight="75px"
            android:background="@color/colorLine" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75px"
            android:layout_marginTop="59px"
            android:layout_marginRight="75px"
            android:layout_marginBottom="30px">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入短信验证码"
                android:inputType="phone"
                android:paddingLeft="15px"
                android:textColor="@color/color333333"
                android:textColorHint="@color/color999999"
                android:textSize="28px" />


            <com.xjd.a360fastloan.widget.CountDownTextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="55px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_btn_round"
                android:gravity="center_vertical"
                android:paddingLeft="19px"
                android:paddingRight="19px"
                android:text="获取验证码"
                android:textColor="@color/colorText"
                android:textSize="28px" />


        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="75px"
            android:layout_marginRight="75px"
            android:background="@color/colorLine" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/lly_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="61px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@drawable/selector_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:text="我已阅读并同意"
                android:textColor="@color/color666666"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:text="《用户注册服务协议》"
                android:textColor="@color/colorText"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoLinearLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginLeft="75px"
            android:layout_marginTop="42px"
            android:layout_marginRight="75px"
            android:background="@drawable/shape_btn_common"
            android:text="登录"
            android:textColor="@color/colorWhite"
            android:textSize="36px" />


    </com.zhy.autolayout.AutoLinearLayout>
</layout>