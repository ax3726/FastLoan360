<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rly_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10px"
    android:background="@color/white"
    android:paddingLeft="40px"
    android:paddingTop="36px"
    android:paddingRight="40px"
    android:paddingBottom="36px">

    <ImageView
        android:id="@+id/image_01"
        android:layout_width="124px"
        android:layout_height="124px" />

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="124px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_toRightOf="@id/image_01"
        android:background="#e2e5e9" />

    <TextView
        android:id="@+id/tv_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/view_line"
        android:text="360极速借"
        android:textColor="#1e3751"
        android:textSize="28px" />

    <TextView
        android:id="@+id/tv_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_01"
       android:layout_marginTop="19px"
        android:layout_toRightOf="@id/view_line"
        android:text="额度15000元"
        android:textColor="#666666"
        android:textSize="22px" />

    <TextView
        android:id="@+id/tv_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_02"
        android:layout_marginTop="12px"
        android:layout_toRightOf="@id/view_line"
        android:text=""
        android:textColor="#ff2c59"
        android:textSize="20px" />

    <TextView
        android:id="@+id/tv_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_02"
        android:layout_marginTop="12px"
        android:layout_marginLeft="23px"
        android:layout_toRightOf="@id/tv_03"
        android:text=""
        android:textColor="#d8d8d8"
        android:textSize="18px" />


    <TextView
        android:id="@+id/tv_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_01"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19px"
        android:layout_toRightOf="@id/tv_02"
        android:text="周期90天"
        android:textColor="#e2e5e9"
        android:textSize="22px" />

    <Button

        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignParentRight="true"
        android:background="@mipmap/order_icon_6"
        android:text="审核中"
        android:textColor="@color/color999999"

        android:textSize="18px" />
