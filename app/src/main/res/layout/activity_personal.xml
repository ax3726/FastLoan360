<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorF0F3FF"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="15px"
            android:layout_marginLeft="30px"
            android:textSize="13sp"
            android:textColor="#64646b"
            android:text="必填信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginTop="15px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingBottom="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="基本信息："
                android:textColor="@color/color999999"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_jiben"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vie_line_1"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="140px"
                android:layout_marginTop="30px"
                android:background="@color/colorWhite"
                android:drawableRight="@mipmap/right_icon"
                android:drawablePadding="15px"
                android:gravity="right"
                android:hint="已认证"
                android:textColor="@color/color999999"
                android:textSize="28px" />

            <View
                android:id="@+id/view_line_1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/tv_jiben"
                android:layout_marginTop="30px"
                android:background="@color/colorLine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_1"
                android:layout_marginTop="30px"
                android:text="工作信息："
                android:textColor="@color/color999999"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_gongzuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_1"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="140px"
                android:layout_marginTop="30px"
                android:background="@color/colorWhite"
                android:drawableRight="@mipmap/right_icon"
                android:drawablePadding="15px"
                android:gravity="right"
                android:hint="已完成"
                android:textColor="@color/color999999"
                android:textSize="28px" />

            <View
                android:id="@+id/view_line_2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/tv_gongzuo"
                android:layout_marginTop="30px"
                android:background="@color/colorLine" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_2"
                android:layout_marginTop="30px"
                android:text="联系人："
                android:textColor="@color/color999999"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_lianxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_2"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="140px"
                android:layout_marginTop="30px"
                android:background="@color/colorWhite"
                android:drawableRight="@mipmap/right_icon"
                android:drawablePadding="15px"
                android:gravity="right"
                android:hint="未完成"
                android:textColor="@color/colorFF2C5B"
                android:textSize="28px" />
            <View
                android:id="@+id/view_line_3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/tv_lianxi"
                android:layout_marginTop="30px"
                android:background="@color/colorLine" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_3"
                android:layout_marginTop="30px"
                android:text="银行卡："
                android:textColor="@color/color999999"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_bankcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_3"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="140px"
                android:layout_marginTop="30px"
                android:background="@color/colorWhite"
                android:drawableRight="@mipmap/right_icon"
                android:drawablePadding="15px"
                android:gravity="right"
                android:hint="未完成"
                android:textColor="@color/colorFF2C5B"
                android:textSize="28px" />
            <View
                android:id="@+id/view_line_4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/tv_bankcard"
                android:layout_marginTop="30px"
                android:background="@color/colorLine" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</layout>
